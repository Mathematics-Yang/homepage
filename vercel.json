{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "background.jpg",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/background.jpg",
            "dest": "/background.jpg"
        },
        {
            "src": "/(.*\\.(png|jpg|jpeg|gif|svg|ico|css|js))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ]
}